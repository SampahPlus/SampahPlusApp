<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/Primary"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/tv_hook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/hookContent"
            android:textColor="@color/light"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/iv_banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_hook2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_light"
            android:text="@string/hookContent2"
            android:textColor="@color/light"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/iv_banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_hook" />

        <Button
            android:id="@+id/btnPagePredict"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_hook2"
            app:layout_constraintTop_toBottomOf="@id/tv_hook2"
            android:backgroundTint="@color/green_100"
            android:text="@string/buttonPredict"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="@color/Primary"/>

        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="160dp"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/hookContent"
            android:src="@drawable/img_cvhome"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>